{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "buildCommand": "npm install && cd frontend && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/login",
      "dest": "/api/index.py"
    },
    {
      "src": "/create-admin",
      "dest": "/api/index.py"
    },
    {
      "src": "/request-access",
      "dest": "/api/index.py"
    },
    {
      "src": "/forgot-password",
      "dest": "/api/index.py"
    },
    {
      "src": "/set-password",
      "dest": "/api/index.py"
    },
    {
      "src": "/login.html",
      "dest": "/frontend/public/login.html"
    },
    {
      "src": "/manifest.json",
      "dest": "/frontend/public/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/public/favicon.ico"
    },
    {
      "src": "/logo192.png",
      "dest": "/frontend/public/logo192.png"
    },
    {
      "src": "/logo512.png",
      "dest": "/frontend/public/logo512.png"
    },
    {
      "src": "/robots.txt",
      "dest": "/frontend/public/robots.txt"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ]
}
